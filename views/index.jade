doctype html
html(lang="en")
    head
        title Chinese Dictionary
        link(rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/app.css")

    body(ng-app="ngApp")
        .container
            h1 Chinese Dictionary

            div(ng-controller="EntryCtrl")
                //- Query input
                .input-group.entry-input
                    span.input-group-addon Random entries
                    input.form-control(type="text" ng-model="numRandom")
                    span.input-group-btn
                        button.btn.btn-primary(type="button" ng-click="getRandom()")
                            span.glyphicon.glyphicon-refresh

                .input-group.entry-input
                    span.input-group-addon
                        select(ng-model="searchLang")
                            option(value="english") English
                            option(value="chinese") Chinese
                            option(value="pinyin") Pinyin
                    input.form-control(type="text" ng-model="searchTerm")
                    span.input-group-btn
                        button.btn.btn-primary(type="button" ng-click="search()")
                            span.glyphicon.glyphicon-search

                //- Dictionary table
                ul.list-group
                    li.list-group-item.list-group-item-info
                        .row
                            .col-md-2 Traditional
                            .col-md-2 Simplified
                            .col-md-4 Pinyin
                            .col-md-4 English

                    li.list-group-item(ng-repeat="entry in entries")
                        .row
                            .col-md-2 {{entry.trad}}
                            .col-md-2 {{entry.simp}}
                            .col-md-4 {{entry.pinyin}}
                            .col-md-4(ng-click="showAltEnglish(entry)" ng-class="{selectable: entry.english[1]}")
                                ul.list-unstyled
                                    li {{entry.english[0]}}
                                        span.caret(ng-if="entry.english[1]")
                                    li.altEnglish(ng-repeat="oneEnglish in entry.english.slice(1)" ng-if="entry.showAltEnglish") {{oneEnglish}}
                                //- ul.list-group.inner.list-unstyled(ng-if="entry.showAltEnglish")
        
        script(src="/vendor/angular/angular.min.js")
        script(src="/js/app.js")
