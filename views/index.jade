doctype html
html(lang="en")
    head
        title Chinese Dictionary
        link(rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/app.css")
        script(src="/vendor/angular/angular.js")
        script(src="/js/app.js")

    body(ng-app="ngApp")
        .container
            h1 Chinese Dictionary

            div(ng-controller="EntryCtrl")

                .input-group.entry-input
                    span.input-group-addon Random entries
                    input.form-control(type="text" ng-model="count")
                    span.input-group-btn
                        button.btn.btn-default(type="button" ng-click="refreshEntries()") Refresh

                .input-group.entry-input
                    span.input-group-addon Search English
                    input.form-control(type="text" ng-model="englishTerm")
                    span.input-group-btn
                        button.btn.btn-default(type="button" ng-click="searchEnglish()") Search
                
                

                ul.list-group
                    li.list-group-item.list-group-item-info
                        .row
                            .col-md-2 Traditional
                            .col-md-2 Simplified
                            .col-md-4 Pinyin
                            .col-md-4 English

                    li.list-group-item(ng-repeat="entry in entries")
                        .row
                            .col-md-2 {{entry.trad}}
                            .col-md-2 {{entry.simp}}
                            .col-md-4 {{entry.pinyin}}
                            .col-md-4 {{entry.english[0]}}
