{
  "compilerOptions": {
    "composite": true,
    "outDir": "./build",
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
